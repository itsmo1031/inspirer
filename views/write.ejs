    <script>
        function textalign(option){
            $('#writeframe').contents().find('body').attr("style", "text-align: "+option+";");
        }
    </script>
    <script>
        var spellChecker = require('spellchecker');
        var result;
        function checkspell(){
            if(confirm("Spell Check?")){
                result = spellChecker.isMisspelled($('#writeframe').contents().find('html').text());
                console.log(result);
                return true;
            } else return false;
        }
    </script>
    <script>
        var res;
